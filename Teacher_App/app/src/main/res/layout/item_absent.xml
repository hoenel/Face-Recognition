<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/white">

    <!-- Avatar / Icon -->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_bell" />

    <!-- Khối thông tin + chữ BÁO NGHỈ bên phải -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginStart="12dp">

        <!-- Thông tin sinh viên (bên trái) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvStudentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSSV: 123456"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#787575" />

            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn học: Toán"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#787575" />


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày: 25/08/2025"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#787575"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Text "BÁO NGHỈ" (bên phải) -->
        <TextView
            android:id="@+id/tvAbsentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BÁO NGHỈ"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#FA0000"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp"/>
    </LinearLayout>

</LinearLayout>
